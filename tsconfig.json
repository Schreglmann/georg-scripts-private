{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",

    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es5",

        "outDir": "lib",
        "declaration": true,

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
